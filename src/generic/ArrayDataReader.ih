

namespace kiwi
{
namespace generic
{



template<typename T, unsigned int D>
ArrayDataReader<T,D>::ArrayDataReader(
	const core::Resource::ReaderInputPort& port )
{
	ArrayData<T,D>* resource = 
		dynamic_cast< ArrayData<T,D>* >( 
			port.connectedOutput()->resource() 
		);
	if(!resource)
	{
		debug.error() << "ArrayDataReader<"
			<<types::str<T>() 
			<< ">::Constructor : "
			<< "enable to determine the Resource type" 
			<< endl();
	}
	_port = port.connectedOutput()->index();
	_data = resource->getDataPointer(_port);
	_incs = resource->getIncrements(_port);
}



template<typename T, unsigned int D>
T ArrayDataReader<T,D>::get(const Point<int,D>& coords) const
{
	unsigned index = 0;
	for(unsigned i = 0; i < D; ++i)
		index += _incs[i]*coords(i);
		
	return _data[index];
}

